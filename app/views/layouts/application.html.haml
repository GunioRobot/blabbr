!!! Strict
%html
  %head
    %title
      = h("Blabbr - #{yield(:title)}")
    = stylesheet_link_tag 'style'
    %link{ :rel => "shortcut icon", :href => "/favicon.ico", :type => "image/x-icon"}
    = include_javascripts :application
    = csrf_meta_tag
    %script#user(type="text/html")
      %p
        = "Messages : {{posts_count}}"
    %script#topic(type="text/html")
      %article
        %p.unread
          %mark
            0
        %header
          %h3
            %a(href="/topics/{{slug}}") {{title}}
          %h4
            = "by {{creator}} le {{created_at}}"
        %hr
        %p
          = "{{title}}"
  %body
    %header#top
      %nav
        %ul#user_info
          %li#avatar
            = link_to_avatar_thumb current_user
          %li
            = link_to t('home'), root_path
          %li
            = link_to t('topics.label'), topics_path
          %li
            = link_to t('preferences'), dashboard_path
          %li
            = link_to t('logout'), logout_path
      %ul.topic-list
        %li.new
          = link_to t('topics.new'), new_topic_path
        %li.new
          = link_to t('smilies.new'), new_smiley_path
    %hr
    - flash.each do |name, msg|
      = content_tag :div, msg, :id => "flash_#{name}"
    %h2#page-title
      = yield(:title)
    %section#contents
      =yield
    #notify
    %aside
    %hr
    = render(:partial => "shared/ga")
    :javascript
      pusher = new Pusher("#{ENV['PUSHER_KEY']}");

