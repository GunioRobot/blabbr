- form_for(@user) do |f|
  = f.error_messages
  = f.hidden_field :identity_url
  .p
    = f.label t('nickname')
    .br
    = f.text_field :nickname
  .p
    = f.label t('email')
    .br
    = f.text_field :email
  .p
    = f.label t('locale')
    = f.select(:locale, available_i18n, {})
  .p
    = f.submit t('form.save')
